<h1 class= "text-center display-4">BIENVENUE</h1>

<div class="">
<% @gossip.each do |t| %>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= @user.find(t.user_id).first_name%></h5>
        <p class="card-text"><%= t.content %></p>
        <a class="btn btn-outline-danger" href="<%= article_path(t) %>">Lire</a>
      </div>
    </div>
  </div>
</div>
<br><br>
<% end %>
